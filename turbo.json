{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "MONGODB_URI",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "dependsOn": [
        "^build"
      ],
      "cache": true,
      "persistent": true,
      "outputs": [
        "dist/**"
      ]
    }
  }
}
